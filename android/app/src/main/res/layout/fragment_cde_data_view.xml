<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="166dp"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/backgroundTransparent">

        <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cd_label"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

        <TableLayout
            style="@style/TextViewCDETableParent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cde_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1,2">
            <TableRow>
                <TextView
                    android:text=""/>
                <TextView
                    style="@style/TextViewCDETableParent"
                    android:text="@string/cde_table_classification_value"
                    android:gravity="center"/>
                <TextView
                    style="@style/TextViewCDETableParent"
                    android:text="@string/cde_table_classification_certainty"
                    android:gravity="center"/>
                <TextView
                    style="@style/TextViewCDETableParent"
                    android:text="@string/cde_table_classification_year"
                    android:gravity="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/cde_table_overall_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/TextViewCDETableParent"
                    android:id="@+id/cde_table_overall_name"
                    android:text="@string/cde_table_overall"
                    android:gravity="start"/>
                <TextView
                    style="@style/TextViewCDETableChild"
                    android:id="@+id/cde_table_overall_value"
                    android:text=""
                    android:gravity="center"/>
                <TextView
                    style="@style/TextViewCDETableChild"
                    android:id="@+id/cde_table_overall_certainty"
                    android:text=""
                    android:gravity="center" />
                <TextView
                    style="@style/TextViewCDETableChild"
                    android:id="@+id/cde_table_overall_year"
                    android:text=""
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:id="@+id/cde_table_ecological_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/TextViewCDETableParent"
                    android:id="@+id/cde_table_ecological_name"
                    android:text="@string/cde_table_ecological"
                    android:gravity="start"/>
                <TextView
                    style="@style/TextViewCDETableChild"
                    android:id="@+id/cde_table_ecological_value"
                    android:text=""
                    android:gravity="center"/>
                <TextView
                    style="@style/TextViewCDETableChild"
                    android:id="@+id/cde_table_ecological_certainty"
                    android:text=""
                    android:gravity="center" />
                <TextView
                    style="@style/TextViewCDETableChild"
                    android:id="@+id/cde_table_ecological_year"
                    android:text=""
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:id="@+id/cde_table_chemical_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/TextViewCDETableParent"
                    android:id="@+id/cde_table_chemical_name"
                    android:text="@string/cde_table_chemical"
                    android:gravity="start" />
                <TextView
                    style="@style/TextViewCDETableChild"
                    android:id="@+id/cde_table_chemical_value"
                    android:text=""
                    android:gravity="center" />
                <TextView
                    style="@style/TextViewCDETableChild"
                    android:id="@+id/cde_table_chemical_certainty"
                    android:text=""
                    android:gravity="center" />
                <TextView
                    style="@style/TextViewCDETableChild"
                    android:id="@+id/cde_table_chemical_year"
                    android:text=""
                    android:gravity="center" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC000000"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/cde_toolbar"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:id="@+id/back_button_cde_data_view"
                android:clickable="true"
                android:scaleType="center"
                android:padding="16dp"
                android:src="@drawable/arrow_white" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cde_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:layout_weight="0.30" />

</LinearLayout>
