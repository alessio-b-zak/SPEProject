<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF000000"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/infoview_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:id="@+id/back_button_info_view"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/arrow_white"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/backgroundDefault" >

            <TextView
                android:id="@+id/info_title"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_title"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/info_subtitle"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_subtitle"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/info_description"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_description"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/info_home_buttons"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_home_buttons"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="33dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/info_gpsButton"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:src="@drawable/target_white"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/info_gpsText"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:text="@string/info_gpsText"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/info_camButton"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:src="@drawable/photo_icon"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:id="@+id/info_camText"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:text="@string/info_camText"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/info_layers"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_layers"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="33dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/info_cde_layer"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.80"
                    android:src="@drawable/ic_cde_marker"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/info_cde_description"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:text="@string/info_cde_description"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/info_wims_layer"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.80"
                    android:src="@drawable/ic_wims_marker"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/info_wims_description"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:text="@string/info_wims_description"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/info_image_layer"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.80"
                    android:src="@drawable/ic_photo_marker"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/info_image_description"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:text="@string/info_image_description"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>