<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/wims_data_toolbar"
        android:minHeight="?attr/actionBarSize">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:id="@+id/back_button_wims_data_view"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/arrow_white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:id="@+id/info_button_wims_data_view"
            android:clickable="true"
            android:scaleType="center"
            android:layout_gravity="end"
            android:padding="16dp"
            android:text="@string/cde_info_button"
            android:textAllCaps="false"
            android:textAlignment="textEnd"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/info_white" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:background="#cc4fc3f7">

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wims_name"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <!--<TextView-->
            <!--android:text=""-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:clickable="true"-->
            <!--android:id="@+id/wims_type"-->
            <!--android:textSize="14sp"-->
            <!--android:textColor="@color/black"-->
            <!--android:layout_gravity="start"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:layout_marginLeft="16dp"-->
            <!--android:layout_marginRight="16dp" />-->

        <TableLayout
            style="@style/TextViewDataTableParent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/wims_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/wims_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:layout_weight="0.30" />

</LinearLayout>
