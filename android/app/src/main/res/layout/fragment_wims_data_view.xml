<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:background="#cc4fc3f7">

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wims_name"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/wims_type"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <TableLayout
            style="@style/TextViewDataTableParent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/wims_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1,2">
            <TableRow>
                <TextView
                    style="@style/TextViewDataTableParent"
                    android:text="@string/wims_table_determinand"
                    android:gravity="start"/>
                <TextView
                    style="@style/TextViewDataTableParent"
                    android:text="@string/wims_table_result"
                    android:gravity="start"/>
                <TextView
                    style="@style/TextViewDataTableParent"
                    android:text="@string/wims_table_date"
                    android:gravity="start"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC000000"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/dataview_toolbar"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:id="@+id/back_button_sp_data_view"
                android:clickable="true"
                android:scaleType="center"
                android:padding="16dp"
                android:src="@drawable/arrow_white" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:layout_weight="0.30" />

</LinearLayout>
