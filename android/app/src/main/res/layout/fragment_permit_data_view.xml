<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/permit_toolbar"
        android:minHeight="?attr/actionBarSize">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:id="@+id/back_button_permit_data_view"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/arrow_white" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/backgroundDefault">

        <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/permit_holder_name"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

        <TableLayout
            style="@style/TextViewDataTableParent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/permit_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:stretchColumns="1,2">
            <TableRow
                android:id="@+id/permit_table_type_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/TextViewDataTableParent"
                    android:gravity="end"
                    android:text="@string/permit_table_type"/>
                <TextView
                    style="@style/TextViewDataTableChild"
                    android:id="@+id/permit_table_type"
                    android:gravity="start"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:layout_weight="1"
                    android:text=""/>
            </TableRow>

            <TableRow
                android:id="@+id/permit_table_date_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/TextViewDataTableParent"
                    android:gravity="end"
                    android:text="@string/permit_table_date"/>
                <TextView
                    style="@style/TextViewDataTableChild"
                    android:id="@+id/permit_table_date"
                    android:gravity="start"
                    android:text=""/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/permit_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:layout_weight="0.30" />

</LinearLayout>
