<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/permit_toolbar"
        android:minHeight="?attr/actionBarSize">

        <ImageButton
            style="@style/back_button"
            android:id="@+id/back_button_permit_data_view"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/backgroundDefault">

        <TextView
            style="@style/text_view_heading"
            android:id="@+id/permit_holder_name"
            android:text=""/>

        <TableLayout
            style="@style/table_layout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/permit_table"
            android:stretchColumns="1,2">
            <TableRow
                android:id="@+id/permit_table_effluent_type_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/text_view_table_parent"
                    android:gravity="start"
                    android:text="@string/permit_table_effluent_type"/>
                <TextView
                    style="@style/text_view_table_child"
                    android:id="@+id/permit_table_effluent_type"
                    android:text=""/>
            </TableRow>

            <TableRow
                android:id="@+id/permit_table_site_type_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/text_view_table_parent"
                    android:gravity="start"
                    android:text="@string/permit_table_site_type"/>
                <TextView
                    style="@style/text_view_table_child"
                    android:id="@+id/permit_table_site_type"
                    android:text=""/>
            </TableRow>

            <TableRow
                android:id="@+id/permit_table_effective_date_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/text_view_table_parent"
                    android:gravity="start"
                    android:text="@string/permit_table_effective_date"/>
                <TextView
                    style="@style/text_view_table_child"
                    android:id="@+id/permit_table_effective_date"
                    android:text=""/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/permit_grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#AA000000"
        android:layout_weight="0.30" />

</LinearLayout>
