<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <android.support.v7.widget.Toolbar
        style="@style/toolbar_default"
        android:id="@+id/wims_details_toolbar">

        <ImageButton
            style="@style/back_button"
            android:id="@+id/back_button_wims_details_view"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/cde_details_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundDefault"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                style="@style/text_view_heading"
                android:id="@+id/wims_details_title"
                android:text=""/>

            <TextView
                style="@style/text_view_sub_heading"
                android:id="@+id/wims_details_general_title"
                android:text="@string/wims_details_general_title"/>

            <TableLayout
                style="@style/table_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wims_details_general_table">
            </TableLayout>

            <TextView
                style="@style/text_view_sub_heading"
                android:id="@+id/wims_details_diss_oxygen_title"
                android:text="@string/wims_details_diss_oxygen_title"/>

            <TableLayout
                style="@style/table_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wims_details_diss_oxygen_table">
            </TableLayout>

            <TextView
                style="@style/text_view_sub_heading"
                android:id="@+id/wims_details_oxygen_demand_title"
                android:text="@string/wims_details_oxygen_demand_title"/>

            <TableLayout
                style="@style/table_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wims_details_oxygen_demand_table">
            </TableLayout>

            <TextView
                style="@style/text_view_sub_heading"
                android:id="@+id/wims_details_nitrates_title"
                android:text="@string/wims_details_nitrates_title"/>

            <TableLayout
                style="@style/table_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wims_details_nitrates_table">
            </TableLayout>

            <TextView
                style="@style/text_view_sub_heading"
                android:id="@+id/wims_details_phosphates_title"
                android:text="@string/wims_details_phosphates_title"/>

            <TableLayout
                style="@style/table_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wims_details_phosphates_table">
            </TableLayout>

            <TextView
                style="@style/text_view_sub_heading"
                android:id="@+id/wims_details_metals_title"
                android:text="@string/wims_details_metals_title"/>

            <TableLayout
                style="@style/table_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wims_details_metals_table">
            </TableLayout>

            <TextView
                style="@style/text_view_sub_heading"
                android:id="@+id/wims_details_solids_title"
                android:text="@string/wims_details_solids_title"/>

            <TableLayout
                style="@style/table_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wims_details_solids_table">
            </TableLayout>

            <Button
                style="@style/full_report_button"
                android:id="@+id/wims_full_report_button"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>